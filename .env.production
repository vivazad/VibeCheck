# ============================================
# VibeCheck Production Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit the actual .env file to version control

# ===================
# Database
# ===================
MONGO_USERNAME=vibecheck
MONGO_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ===================
# JWT Configuration
# ===================
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET
JWT_EXPIRES_IN=7d

# ===================
# Security
# ===================
# Generate a secure secret: openssl rand -base64 32
HMAC_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET

# CORS origin (your frontend domain)
CORS_ORIGIN=https://yourdomain.com

# ===================
# Application
# ===================
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# ===================
# External Services (Optional)
# ===================
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_WHATSAPP_FROM=
# SENDGRID_API_KEY=

# ===================
# Monitoring (Optional)
# ===================
# SENTRY_DSN=
